#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int visited[MAX];

void DFS(int n, int adj[n][n], int v){
    visited[v] = 1;
    printf("%d ", v);

    for(int i = 0; i < n; i++){
        if(adj[v][i] == 1 && !visited[i]){
            DFS(n, adj, i);
        }
    }
}

int main(){
    int n;
    printf("Enter number of vertices: ");
    scanf("%d", &n);

    int adj[n][n];
    printf("Enter adjacency matrix (%dx%d):\n", n, n);
    for(int i = 0; i < n; i++)
        for(int j = 0; j < n; j++)
            scanf("%d", &adj[i][j]);

    int start;
    printf("Enter starting vertex (0 to %d): ", n-1);
    scanf("%d", &start);

    for(int i = 0; i < n; i++) visited[i] = 0;

    printf("DFS Traversal: ");
    DFS(n, adj, start);
    printf("\n");

    return 0;
}
